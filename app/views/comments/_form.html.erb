<%= form_with(model: [company,comment]) do |form| %>
  <div class="comment-user">
    <%= form.text_field :user_id,:value => current_user.user_id %><br>
  </div>
  <div class="comment-content">
    <%= form.text_area :content ,:size => '80x5' %>
  </div>
  <div class="actions">
    <%= form.submit "コメントをする" , {class: "btn-lg btn-info"} %>
  </div>
<% end %>
